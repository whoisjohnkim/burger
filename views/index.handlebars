<div class="container">
    <h1 class="center">Burgers of the Day!</h1>
    <div class="row">
        <div class="col s6">
            <h3 class="center">Uneaten Burgers!</h3>
            <div>
                {{#each burgers}} {{#unless devoured}}
                <div>
                    {{burger_name}}
                    <button class="eat btn right" data-id="{{id}}" data-devoured="{{devoured}}">Devour </button>
                </div>
                {{/unless}} {{/each}}
            </div>
        </div>
        <div class="col s6">
            <h3 class="center">Devoured</h3>
            <div>
                {{#each burgers}} {{#if devoured}}
                <div>
                    {{burger_name}}
                </div>
                {{/if}} {{/each}}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s6 push-s3">
            <h3 class="center">Order a burger</h3>
            <form class="create-form">
                <div class="form-group">
                    <label for="burgs">Burger of Choice:</label>
                    <input type="text" id="burgs" burger_name="name">
                </div>
                <div class="center-align">
                    <button class="btn" id="order" type="submit">Order Burger</button>
                </div>
            </form>
        </div>
    </div>
</div>